@model MVC_Taksi.Models.Vozac

@{
    ViewBag.Title = "Promena Lokacije";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("PromenaLokacijeVozaca", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <section>

        <p>
            <fieldset>
                <legend>Promeni Lokaciju</legend>
                <table>
                    
                    <tr>
                        <td>
                            <div class="editor-label">
                                <label>Lokacija :</label>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.KorisnickoIme)
                                @Html.ValidationMessageFor(model => model.KorisnickoIme)
                            </div>
                        </td>

                    </tr>

                    <tr>
                        <td></td>
                        <td align="right">
                            <input type="submit" value="Dodaj Vozilo" />
                        </td>

                    </tr>


                    <input type="hidden" id="Vozac" name="Vozac" value=@TempData["VozacIme"].ToString()>


                </table>

            </fieldset>
        </p>
    </section>
}

