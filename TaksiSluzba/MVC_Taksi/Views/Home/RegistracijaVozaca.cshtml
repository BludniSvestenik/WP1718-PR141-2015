@model MVC_Taksi.Models.Korisnik

@{
    ViewBag.Title = "Registracija Vozaca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("#Date").datepicker();
    });
</script>


@using (Html.BeginForm("RegistracijaVozaca", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <section>

        <p>
            <fieldset>
                <legend>Dobro dosli na registraciju </legend>
                <table>
                    <tr>
                        <td>
                            <div class="editor-label">
                                <label>Korisnicko ime :</label>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.KorisnickoIme)
                                @Html.ValidationMessageFor(model => model.KorisnickoIme)
                            </div>
                        </td>

                        &nbsp&nbsp&nbsp&nbsp

                        <td>
                            <div class="editor-label">
                                <label>Lozinka :</label>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.PasswordFor(model => model.Lozinka)
                                @Html.ValidationMessageFor(model => model.Lozinka)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <div class="editor-label">
                                <label>Ime :</label>
                            </div>

                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Ime)
                                @Html.ValidationMessageFor(model => model.Ime)
                            </div>
                        </td>
                        <td>
                            <div class="editor-label">
                                <label>Prezime :</label>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Prezime)
                                @Html.ValidationMessageFor(model => model.Prezime)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <div class="editor-label">
                                <label>JMBG :</label>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.JMBG)
                                @Html.ValidationMessageFor(model => model.JMBG)
                            </div>
                        </td>
                        <td>
                            <div class="editor-label">
                                <label>Kontakt telefon :</label>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.KontaktTelefon)
                                @Html.ValidationMessageFor(model => model.KontaktTelefon)
                            </div>
                        </td>

                    </tr>

                    <tr>
                        <td>
                            <div class="editor-label">
                                <label>Pol :</label>
                            </div>
                        </td>
                        <td>
                            <div class="styled-select green rounded">
                                @Html.DropDownList("Pol", new List<SelectListItem>
                                        {
                                            new SelectListItem{ Text = "Musko",  Value = "MUSKO"},
                                            new SelectListItem{ Text = "Zensko", Value = "ZENSKO"},
                                      }, "Izaberite pol")
                                @Html.ValidationMessageFor(model => model.Pol)
                            </div>
                        </td>
                        <td>
                            <div class="editor-label">
                                <label>Email :</label>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.EditorFor(model => model.Email)
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td align="right">
                            <input type="submit" id="submt" value="Registruj se" />
                        </td>
                    </tr>


                    @Html.HiddenFor(model => model.Uloga, new { Value = "VOZAC" })

                </table>

        </fieldset>
        </p>
    </section>
}

@*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
